{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VRC Pictures Organizer",
  "version": "3.0.0",
  "mainBinaryName": "VRCPictureOrganizer",
  "identifier": "jp.nano2.vrc-pictures-organizer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "VRC Pictures Organizer",
        "width": 400,
        "height": 300,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Nano-Nano",
    "windows": {
      "nsis": null,
      "wix": {
        "language": "ja-JP"
      }
    }
  }
}
